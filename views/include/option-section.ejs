<div class="option-section-main">
  <div class="option-section">
    <div class="theme">
      <button class="theme-btn" type="button">
        <div class="theam-type <%= theme %>"></div>
        <div class="arrow">
          <img
            src="/images/up.png"
            alt="external-up-arrows-those-icons-lineal-those-icons-6"
          />
        </div>
      </button>
    </div>
    <div class="darkmode">
      <form action="/displaymode" method="post">
        <input type="hidden" name="theme" value="light-mode" />
        <button class="mode-bin" type="submit">
          <div class="mode-one"></div>
        </button>
      </form>
    </div>
    <div class="background">
      <form action="/background" method="post">
        <input type="hidden" name="theme" value="transparent" />
        <button class="bac-btn" type="submit">
          <div class="mode-two"></div>
        </button>
      </form>
    </div>
    <div class="padding">
      <form action="/padding" method="post">
        <input type="hidden" name="padding" value="30" />
        <button type="submit" class="pad-btn">30</button>
      </form>
      <form action="/padding" method="post">
        <input type="hidden" name="padding" value="40" />
        <button type="submit" class="pad-btn">40</button>
      </form>
      <form action="/padding" method="post">
        <input type="hidden" name="padding" value="50" />
        <button type="submit" class="pad-btn">50</button>
      </form>
      <form action="/padding" method="post">
        <input type="hidden" name="padding" value="60" />
        <button type="submit" class="pad-btn">60</button>
      </form>
    </div>
    <div class="exports">
      <input
        class="input-image-info"
        type="hidden"
        value=""
        name="codeImageSection"
      />
      <button class="exports-btn">Export</button>
    </div>
    <!-- theme section -->
    <%- include("./theme-section.ejs") %>
    <!-- theme section close-->
  </div>
</div>
